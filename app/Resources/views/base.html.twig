<!DOCTYPE html>
<html xmlns:fb="http://www.facebook.com/2008/fbml">
    <head>
        <meta charset="UTF-8" />
        <link href='http://fonts.googleapis.com/css?family=Ubuntu:400,500,700,300' rel='stylesheet' type='text/css'>
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        	{% stylesheets filter='cssrewrite'
			'bundles/likemesystem/css/custom-theme/jquery-ui-1.8.23.custom.css'
			'bundles/likemesystem/css/main.css'
			%}
			
			<link href="{{ asset_url }}" rel="stylesheet" type="text/css">
				
			{% endstylesheets %}
			
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        
    </head>
    <body>
	<div id="loading"><div id="loading-floter"></div><div id="loading-inside"><span id="loading-text">Speichern...</span><div id="loading-bar"></div></div></div>    
    	<div id="container">
    	
    	<div id="header">
        <h1><a href="{{ path('home') }}">{% image '@LikemeSystemBundle/Resources/public/images/logo.png' output='/Resources/images/logo.png' %} <img src="{{ asset_url }}" alt="likeme.ch"/> {% endimage %}</a></h1>
        {% block head %} {% endblock %}
        
        {% block navi %}

			<div id="menu-top">
			{{ knp_menu_render('main') }}
			</div>

            {% if is_granted("IS_AUTHENTICATED_FULLY")%}
                <span id="hallo">Hallo, {{app.user.firstname}}!</span>
            {%endif%}
	    {% endblock %}

        </div>

            	
        {% block body %}{# layout.html.twig #}{% endblock %}
        

        {% block javascripts %}
	    
	    	{% javascripts 
	    	'bundles/likemesystem/js/jquery-1.8.0.min.js'
   			'bundles/likemesystem/js/jquery-ui-1.8.23.min.js'
	    	%}
	    	
	    	<script type="text/javascript" src="{{ asset_url }}"></script>


	    {% endjavascripts %}
	    	
		{% endblock %}
    	</div>
    </body>
</html>
