{% extends 'LikemeSystemBundle::layout.html.twig' %}

{% set user = app.user %}

{%block fos_user_content%}

			<div id="main">
				<div class="box-top">{% block title %}You like ...{% endblock %}</div>
				<div class="box-bottom">

					{% if not stranger_pictures is empty %}
						{% for picture in stranger_pictures if picture.position == 1 %}
							<div class="likepic">
								<img width="400px" height="400px" src="{{ picture.thumb }}" org="{{ picture.src }}" />
								<div class="likeinfo">
									<p>{{ stranger.firstname }}, {{ stranger.birthday | age }} {% if stranger.location != false %} ({{ stranger.location.statecode }}){% endif %}</p>
								</div>
							</div>
						{% endfor %}
					{% else %}
							<div id="no-pic" class="likepic">Kein Bild<br />{{ stranger.firstname }}, {{ stranger.lastname }}</div>
					{% endif %}
						<div id="sortablepictures">
						{% if not stranger_pictures is empty %}
							{% for picture in stranger_pictures %}
								<div id="{{ picture.id }}" class="likepic-sm" style="margin-bottom:20px;"><img width="120px" height="120px" src="{{ picture.thumb }}" org="{{ picture.src }}"/></div>
							{% endfor %}
						{% endif %}			
						</div>
						<div class="clear"></div>
						<div id="about">
						<h3 style="font-size:16px; font-weight:500; margin:20px 0 0 0">Aboutme</h3>
							{{ stranger.aboutme }}
						</div>
				</div>
			</div>
			
			{% include 'LikemeSystemBundle:Home:sider.html.twig' with { 'userMatches': userMatches } %}
			
   	
   	<script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
	<script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
	
{% endblock fos_user_content %}


