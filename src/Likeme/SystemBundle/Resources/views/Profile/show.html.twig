{% extends 'LikemeSystemBundle::layout.html.twig' %}

{% block head %}likeme <div style="float:right; margin-top:10px;" id="profilepic"><img height="40px" width="40px" src="http://1.bp.blogspot.com/_9DRIQ9xf9U4/TKZdUmZ2eaI/AAAAAAAABE0/PC_GRAPj0p4/s400/sexy-girls-free-wallpapers002-sexy-girls.jpg" /></div>{% endblock %}

{% block stylesheets %}

	{{ parent() }}
	
	{% stylesheets filter='cssrewrite'
		'@LikemeSystemBundle/Resources/public/css/ui-lightness/jquery-ui-1.8.23.custom.css'
		output='web/bundles/likemesystem/compiled/profile_show.css'
	%}
			
	<link href="{{ asset_url }}" rel="stylesheet" type="text/css">
		
	{% endstylesheets %}
{% endblock %}

{% block fos_user_content %}
{# {% include "FOSUserBundle:Profile:show_content.html.twig" %} #}
		<div id="content">
			<div id="main">
				<div class="box-top">Profil <div class="save"><a href="">speichern</a></div></div>
				<div class="box-bottom">
					<div class="likepic"><img width="400px" height="400px" src="http://1.bp.blogspot.com/_9DRIQ9xf9U4/TKZdUmZ2eaI/AAAAAAAABE0/PC_GRAPj0p4/s400/sexy-girls-free-wallpapers002-sexy-girls.jpg" /><div class="likeinfo"><p>Sarah, 18 (Blasel)</p></div></div>
					<div class="likepic-sm" style="margin-bottom:20px;"><img width="120px" height="120px" src="http://5eli.com/gallery/albums/userpics/10001/normal_gemma_atkinson~0.jpg" /></div>
					<div class="likepic-sm" style="margin-bottom:20px;"><img width="120px" height="120px" src="http://e.lansik.pl/la939/379a8a950007d09b503dcbec" /></div>
					<div class="likepic-sm"><img width="120px" height="120px" src="http://5eli.com/gallery/albums/userpics/10001/normal_gemma_atkinson~0.jpg" /></div>
					<div class="clear"></div>
					<div id="about">
					<h3 style="font-size:16px; font-weight:500; margin:20px 0 0 0">Über Mich</h3>
						<textarea class="about-text"></textarea>
					</div>
				</div>
			</div>
			<div id="sider">
				<div class="box-top">Angaben</div>
				<div class="box-bottom">
					<span style="padding-bottom:10px;" class="profileinfo">{{ user.firstname }}</span>
					<span style="padding-bottom:10px; margin-top:10px;" class="profileinfo">Hurengeil</span>
					<span style="padding-bottom:10px; margin-top:10px;" class="profileinfo">18.12.1992</span>
					<span style="margin-top:10px; border:none;" class="profileinfo">85D</span>
					<div class="clear"></div>
				</div>
				
				<div class="box-top">Wohnort <div class="save"><a href="">speichern</a></div></div>
				<div class="box-bottom">
					<input type="text" value="Zürich">
				</div>
				
				<div class="box-top">Preferenzen <div class="save"><a href="">speichern</a></div></div>
				<div class="box-bottom">
					<input type="text" value="balbla">
					<input type="text" value="blablabla">
					<input type="text" value="härdöpfel">
				</div>
				
			</div>
		</div>

	<div class="fos_user_user_show">
		{% if active == false %}
	    	<p>Inaktiv :(</p>
	    {% else %}
	    	<p>Aktiv, juhu</p>
		{% endif %}
	
		
		{% for picture in pictures %}
			<img src="{{ picture.src | imagine_filter('thumbnails') }}"/> 
		{% endfor %}
		
	    <p>{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}: {{ user.username }}</p>
	    <p>{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}: {{ user.email }}</p>
	    <p>{{ 'profile.show.firstname'|trans({}, 'FOSUserBundle') }}: {{ user.firstname }}</p>
	    <p>{{ 'profile.show.age'|trans({}, 'FOSUserBundle') }}: {{ user.birthday }}</p> 
	    <p>Age: {{ user.birthday | age }}</p>
	    <p>{{ 'profile.show.gender'|trans({}, 'FOSUserBundle') }}: {{ user.gender }}</p>
	    
	 
	    
	    <form action="{{ path('profile') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
	    {{ form_widget(form) }}
	    <div>
	        <input type="submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
	    </div>
		</form>
	    
	    <a href={{ path('pictures') }}>Bilder</a>
	        
	</div>
   	
   	<script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
	<script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
	
{% endblock fos_user_content %}

{% block javascripts %}
    {{ parent() }}
    	
   	{% javascripts 
   	'@LikemeSystemBundle/Resources/public/widgets/location.js'
   	'@LikemeSystemBundle/Resources/public/js/selectlocation.js'
   	output='web/bundles/likemesystem/compiled/profile_show.js'
	%}
	    	
	<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
	    	
{% endblock %}