{% block fos_user_content %}
{# {% include "FOSUserBundle:Profile:show_content.html.twig" %} #}
		<div id="content">
		<form action="{{ path('profile') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
			<div id="main">
				<div class="box-top">Profil <div class="save"><a href="">speichern</a></div></div>
				<div class="box-bottom">
					<div class="likepic"><img width="400px" height="400px" src="http://1.bp.blogspot.com/_9DRIQ9xf9U4/TKZdUmZ2eaI/AAAAAAAABE0/PC_GRAPj0p4/s400/sexy-girls-free-wallpapers002-sexy-girls.jpg" /><div class="likeinfo"><p>Sarah, 18 (Blasel)</p></div></div>
